@model IEnumerable<OnlineShop.Models.MSupplier>

@{
    ViewBag.Title = "Index";
}

<h2>List Of Suppliers</h2>
<p>
    <button class="btn btn-primary editCustomer" data-details="Create" id="n1" data-controller="Supplier">
        <span class="glyphicon glyphicon-plus-sign"></span>
        Create New
    </button>
</p>
<table class="table table-striped table-bordered" id="datatable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SupplierName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SupplierAddress1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SupplierAddress2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SupplierAddress3)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SupplierCity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pincode)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SupplierName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SupplierAddress1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SupplierAddress2)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SupplierAddress3)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SupplierCity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pincode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <button class="btn btn-success editCustomer glyphicon glyphicon-pencil" id="@item.MS_id" data-details="Edit" data-controller="Supplier">Edit</button>
                <button class="btn btn-danger editCustomer glyphicon glyphicon-remove" id="@item.MS_id" data-details="Delete" data-controller="Supplier">Delete</button>
            </td>
        </tr>
    }

</table>

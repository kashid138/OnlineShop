@model OnlineShop.Models.MUser
@{
    Layout = null;
}
<html>
<head>
    <title>Login: Prince Sports </title>
    <link rel="stylesheet" type="text/css" href="~/Content/bootswatch/pulse/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/mycss.css" />
    <script src="~/Scripts/jquery-3.0.0.min.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>
</head>
<body>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <form>
            <div class="col-md-3 center">
                <div class="card border-primary">
                    <div class="card-header">Sign In</div>
                    <div class="card-body">
                        <div class="form-group">
                            @Html.EditorFor(model => model.UserEmail, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Username Here" } })
                            @Html.ValidationMessageFor(model => model.UserEmail, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.EditorFor(model => model.UserPwd, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Password Here", @type = "password" } })
                            @Html.ValidationMessageFor(model => model.UserPwd, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-block btn-primary" id="btnSubmit">LogIn</button>
                        </div>
                        <div class="form-group">
                            <button type="button" class="btn btn-block btn-outline-danger">Login Via Google</button>
                        </div>
                        <div class="form-group">
                            <button type="button" class="btn btn-block btn-outline-info">Login Via facebook</button>
                        </div>
                        <div class="form-group">
                            @Html.ActionLink("Sign Up", "SignUp", "Account")
                        </div>
                        @if (@ViewBag.Message != null)
                        {
                            <div class="border-danger">
                                @ViewBag.Message
                            </div>
                        }
                    </div>
                </div>
            </div>
        </form>
    }
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>

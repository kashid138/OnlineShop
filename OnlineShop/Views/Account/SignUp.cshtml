@model OnlineShop.Models.MUser
@{
    Layout = null;
}
<html>
<head>
    <title>Login: Prism Sports Shop</title>
    <link rel="stylesheet" type="text/css" href="~/Content/bootswatch/pulse/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/mycss.css" />
    <script src="~/Scripts/jquery-3.0.0.min.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <form>
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="col-md-4 center">
                <div class="card border-primary">
                    <div class="card-header">Sign Up</div>
                    <div class="card-body">
                        <div class="form-group">
                            @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Name here" } })
                            @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.EditorFor(model => model.UserEmail, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Email here" } })
                            @Html.ValidationMessageFor(model => model.UserEmail, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.EditorFor(model => model.UserPwd, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter Password here", @type = "password" } })
                            @Html.ValidationMessageFor(model => model.UserPwd, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-block btn-primary" id="btnSubmit">Sign Up</button>
                        </div>
                        <div class="form-group">
                            @Html.ActionLink("Log In", "Login", "Account", new { @class = "btn btn-block  btn-link" })
                        </div>
                    </div>
                </div>
            </div>
        </form>
    }
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>
@model IEnumerable<OnlineShop.Models.MBrand>

@{
    ViewBag.Title = "Brands";
}

<h2>List Of Brands</h2>
<p>
    <button class="btn btn-primary editCustomer" data-details="Create" id="n1" data-controller="Brand">
        <span class="glyphicon glyphicon-plus-sign"></span>
        Create New
    </button>
</p>
<table class="table table-striped table-bordered" id="datatable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BrandTypeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BrandImageDesc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.BrandTypeName)
        </td>
        <td>
            <img src="~/Uploads/@item.BrandImageDesc" height="100" width="100" />
            @*@Html.DisplayFor(modelItem => item.BrandImageDesc)*@
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            <button class="btn btn-success editCustomer glyphicon glyphicon-pencil" id="@item.MB_id" data-details="Edit" data-controller="Brand">Edit</button>
            <button class="btn btn-danger editCustomer glyphicon glyphicon-remove" id="@item.MB_id" data-details="Delete" data-controller="Brand">Delete</button>
        </td>
    </tr>
    }

</table>

@model OnlineShop.Models.TOrder
@{
    Layout = null;
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                @Html.HiddenFor(model => model.sTNo, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.sTNo, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.dtTrans, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.dtTrans, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.nUserID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nUserID, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.nUserID, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nProdutID, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.nAmount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nAmount, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.nTaxAmount, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nTaxAmount, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.nDeliveryCharges, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.nDeliveryCharges, "", new { @class = "text-danger" })
                @Html.LabelFor(model => model.dtDeliveryDate, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.dtDeliveryDate, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.nQty, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nQty, new { htmlAttributes = new { @class = "form-control md-2" } })
                @Html.ValidationMessageFor(model => model.nQty, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.nAmount, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <label>@Model.nAmount</label>
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.nTaxAmount, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <label>@Model.nTaxAmount</label>
            </div>
        </div>

        <div class="form-group">
            @Html.Label("Payment Type", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("nPaytype", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.nPaytype, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </div>
    </div>
}
<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>

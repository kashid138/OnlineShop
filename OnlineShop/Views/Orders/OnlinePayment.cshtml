@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Payment Gateway</title>
    <link rel="stylesheet" type="text/css" href="~/Content/bootswatch/pulse/bootstrap.min.css" />
    <link rel="stylesheet" type="text/css" href="~/Content/mycss.css" />
    <script src="~/Scripts/jquery-3.0.0.min.js" type="text/javascript"></script>
    <script src="~/Scripts/bootstrap.min.js" type="text/javascript"></script>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="card border-danger col-md-4 center" style="margin-top:50px">
            <h4>Pay By Credit Card</h4>
            <div class="card-body">
                <div class="row">
                    <label>Card Number</label>
                </div>
                <div class="row">
                    <input type="text" class="form-control" placeholder="Enter Card Number" required maxlength="16" onkeypress="return IsNumeric(event);" ondrop="return false;" onpaste="return false;" name="txtCardNo" />
                </div>


                <div class="row">
                    <label>Expiration Date</label>
                </div>

                <div class="row">
                    <input type="text" class="form-control col-md-3" placeholder="Month" required maxlength="2" onkeypress="return IsNumeric(event);" ondrop="return false;" onpaste="return false;" name="txtMonth" />
                    <label class="col-md-1">&nbsp;</label>
                    <input type="text" class="form-control col-md-3" placeholder="Year" required maxlength="2" onkeypress="return IsNumeric(event);" ondrop="return false;" onpaste="return false;" name="txtYear" />
                    <label class="col-md-2">&nbsp;</label>
                    <input type="password" class="form-control col-md-3" placeholder="CVV/CVC" required maxlength="3" onkeypress="return IsNumeric(event);" ondrop="return false;" onpaste="return false;" name="txtCVV" />
                </div>
                <div class="row">
                    <label>Card Holder Name</label>
                </div>
                <div class="row">
                    <input type="text" class="form-control" placeholder="Card Holder Name" required name="txtCardHolder" />
                </div>
                <br />

                <div class="row">
                    <button type="submit" class="btn btn-block btn-danger">Make Payment</button>
                </div>
            </div>
        </div>
    }
    <script type="text/javascript">
        var specialKeys = new Array();
        specialKeys.push(8); //Backspace
        function IsNumeric(e) {
            var keyCode = e.which ? e.which : e.keyCode
            var ret = ((keyCode >= 48 && keyCode <= 57) || specialKeys.indexOf(keyCode) != -1);
            return ret;
        }
    </script>
</body>
</html>

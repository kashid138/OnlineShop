@model IEnumerable<OnlineShop.Models.MUserType>

@{
    ViewBag.Title = "User Types";
}

<h2>List Of User Types</h2>
<p>
    <button class="btn btn-primary editCustomer" data-details="Create" id="n1" data-controller="UserType">
        <span class="glyphicon glyphicon-plus-sign"></span>
        Create New
    </button>
</p>
<table class="table table-striped table-bordered" id="datatable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UserTypeName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.UserTypeName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    <button class="btn btn-success editCustomer glyphicon glyphicon-pencil" id="@item.MUT_id" data-details="Edit" data-controller="UserType">Edit</button>
                    <button class="btn btn-danger editCustomer glyphicon glyphicon-remove" id="@item.MUT_id" data-details="Delete" data-controller="UserType">Delete</button>
                </td>
            </tr>
        }

</table>
